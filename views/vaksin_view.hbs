        <script>
            $(document).ready(function () {
                //tampilkan data ke modal untuk edit
                $('#mytable').on('click', '.edit', function () {
                    var id = $(this).data('id');
                    var nama_warga = $(this).data('nama_warga');
                    var alamat = $(this).data('alamat');
                    var vaksin_1 = $(this).data('vaksin_1');
                    var vaksin_2 = $(this).data('vaksin_2');
                    $('#EditModal').modal('show');
                    $('.id').val(id);
                    $('.nama_warga').val(nama_warga);
                    $('.alamat').val(alamat);
                    $('.vaksin_1').val(vaksin_1);
                    $('.vaksin_2').val(vaksin_2);

                });
                //tampilkan modal hapus record
                $('#mytable').on('click', '.delete', function () {
                    var id = $(this).data('id');
                    $('#DeleteModal').modal('show');
                    $('.id2').val(id);
                });

            });

